<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.test1.mapper.EnrolMapper">
	
	<select id="selectEnrolList" parameterType="hashmap" resultType="com.example.test1.model.Enrol">
		SELECT AVG(ENR_GRADE) AS AVG_GRADE, S.STU_NO, S.STU_NAME
		FROM STUDENT S 
		INNER JOIN ENROL E ON S.STU_NO = E.STU_NO
		GROUP BY S.STU_NO,S.STU_NAME
	</select>
		
	<delete id="deleteEnrol" parameterType="hashmap">
		DELETE FROM ENROL WHERE STU_NO = #{stuNo}
	</delete>
	
	<select id="searchEnrolInfo" parameterType="hashmap" resultType="com.example.test1.model.Student">
		SELECT *
		FROM STUDENT
		WHERE STU_NO = #{stuNo}		
	</select>
	<update id="enrolEdit" parameterType="hashmap">
		UPDATE STUDENT
		SET
			STU_NAME = #{stuName}
		WHERE STU_NO = #{stuNo}
	</update>
</mapper>